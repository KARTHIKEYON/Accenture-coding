class Main{
    public static void main(String[] args){
        int arr[]={1,7,3,6,5,6};
        int totalsum=0;
        int leftsum=0;
        for(int n:arr){
            totalsum+=n;
        }
        for(int i=0;i<arr.length;i++){
            if(leftsum==totalsum-leftsum-arr[i]){
                System.out.println(i);
                return;
            }
            leftsum=leftsum+arr[i];
        }
    System.out.println("no valid pivot");
    }
}
